extends ../common/layout
block layout-content
  h2 Add Product
  form(action="/products/add/submit", method="post")
    label.form-label(for = "name") Name
    input.form-control(type="text", name="name", id="name", required)
    label.form-label(for = "price") Price
    input.form-control(type="decimal", name="price", id="price", required)
    label.form-label(for = "description") Description
    input.form-control(type="text", name="description", id="description", required)
    button.btn.btn-primary(type="submit") Add Product